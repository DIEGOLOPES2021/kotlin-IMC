<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--Estilo titulo, texto usados como titulo-->
    <style name="text_title" parent="TextAppearance.AppCompat.Large">

        <item name="android:textColor">@color/colorPrimaryDark</item>
b        <item name="android:textSize">32sp</item>
    </style>

    <!--estilo labels para backgronds escuros-->
    <style name="label_dark_background" parent="TextAppearance.AppCompat.Medium">

      <item name="android:textColor">@android:color/white</item>
    </style>
</resources>